{
  "name": "@phoebus47/animated-grid",
  "version": "1.0.0",
  "description": "Production-ready, retina, a11y, plugin-ready animated grid background for React.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "public",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Phoebus47/animated-grid.git"
  },
  "homepage": "https://phoebus47.github.io/animated-grid",
  "bugs": {
    "url": "https://github.com/Phoebus47/animated-grid/issues"
  },
  "keywords": [
    "react",
    "animation",
    "grid",
    "background",
    "canvas",
    "typescript",
    "nextjs",
    "hero-section",
    "ui-component"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --verbose",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "tsc --noEmit",
    "generate-bg": "start public/generate-static-bg.html",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "chromatic": "npx chromatic"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "chromatic": "^13.1.2",
    "jest": "^30.0.4",
    "jest-canvas-mock": "^2.5.1",
    "jest-environment-jsdom": "^30.0.4",
    "storybook": "^8.6.14",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "packageManager": "pnpm@10.6.3",
  "license": "MIT"
}
